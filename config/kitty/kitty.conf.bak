font_family        JetBrains Mono
bold_font          auto  
italic_font        auto  
bold_italic_font   auto   

symbol_map U+23FB-U+23FE,U+2665,U+26A1,U+2B58,U+E000-U+E00A,U+E0A0-U+E0A3,U+E0B0-U+E0C8,U+E0CA,U+E0CC-U+E0D2,U+E0D4,U+E200-U+E2A9,U+E300-U+E3E3,U+E5FA-U+E62F,U+E700-U+E7C5,U+F000-U+F2E0,U+F300-U+F31C,U+F400-U+F4A9,U+F500-U+F8FF Symbols Nerd Font

# for remove sound
enable_audio_bell no

# default shell
 shell fish


box_drawing_scale 0.001, 1, 1.5, 2

#for learn the style 
undercurl_style thin-sparse

include ./kitty-themes/themes/IR_Black.conf

#cursor
# cursor_text_color #111111
cursor_beam_thickness 1.5
cursor_underline_thickness 2.0
cursor_blink_interval -1
cursor_stop_blinking_after 15.0

pointer_shape_when_grabbed arrow

#key map for up

map ctrl+shift+up scroll_line_up
map ctrl+shift+k scroll_line_up

#key map for down
 
map ctrl+shift+down scroll_line_down
map ctrl+shift+j scroll_line_down

map ctrl+shift+page_up scroll_page_up  #Scroll page up
map ctrl+shift+page_down scroll_page_down  #Scroll page down
map ctrl+shift+home scroll_home #Scroll to top
map ctrl+shift+end scroll_end #Scroll to bottom
map ctrl+shift+z scroll_to_prompt -1 #Scroll to previous shell prompt
map ctrl+shift+x scroll_to_prompt 1 #Scroll to next shell prompt

background_opacity 0.5
dynamic_background_opacity yes


# BEGIN_KITTY_THEME
# Default
include current-theme.conf
# END_KITTY_THEME

